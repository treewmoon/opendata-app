<div id="record-edit">
  <h2>Records/edit画面</h2>
  <div id="timer">00:00</div>
    <script>
      $(function(){
        var timer = document.getElementById('timer');
        var startTime;
        var elapsedTime = 0;
        var timerId;
        var timeToadd = 0;

        function updateTimetText(){
          var m = Math.floor(elapsedTime / 60000);
          var s = Math.floor(elapsedTime % 60000 / 1000);
          m = ('0' + m).slice(-2);
          s = ('0' + s).slice(-2);
          timer.textContent = m + ':' + s;
        }
        function countUp(){
          timerId = setTimeout(function(){
            elapsedTime = Date.now() - startTime + timeToadd;
            updateTimetText();
            countUp();
          },10);
        }
        window.onload = function(){
          startTime = Date.now();
          countUp();
        }

        $('.GOAL').on('click', function(e){
          clearTimeout(timerId);

          var running_time = timer.textContent.split(':');
          var min = Number(running_time[0]);
          var sec = Number(running_time[1]);
          var running_time_sec = min*60 + sec;
          console.log("running_time_sec");
          console.log(running_time_sec);

          $("#input_running_time").attr("value", timer.textContent);
          var cal = 1.05 * 6.0 / 60 * parseFloat(timer.textContent) * <%= current_user.weight %>;
          console.log('cal : %d', cal);
          $("#input_calory").attr("value", cal);

          console.log("arrivaltime_sec");
          console.log(arrival_time_sec);

          var result;
            if (arrival_time_sec >= start_time_sec + running_time_sec) {
              result = 0;
            } else {
              result = 1;
            }
          console.log("result");
          console.log(result);
          $("#result").attr("value", result);
        })

        //スタート時刻
        var starttime =  $("#nowtime").data("nowtime");//スタート時刻取得
        var start_time = starttime.split(':');
        var hour_s = Number(start_time[0]);
        var min_s = Number(start_time[1]);
        var start_time_sec = hour_s*3600 + min_s*60;

        //ゴール予定時刻
        var arrivalTime =  $("#arrivalTime").data("arrivaltime");//ゴール予定時刻を取得
        console.log("aa")
        var arrival_time = arrivalTime.split(':');
        var hour_a = Number(arrival_time[0]);
        var min_a = Number(arrival_time[1]);
        var arrival_time_sec = hour_a*3600 + min_a*60;//ゴール予定時刻を秒に変換
        console.log("start_time_sec");
        console.log(start_time_sec);
        console.log("arrival_time_sec");
        console.log(arrival_time_sec);

        var trainRunningTime = arrival_time_sec - start_time_sec;//電車が進む時間(秒)
        console.log("trainRunningTime");
        console.log(trainRunningTime);
        var speed_s = 80 / trainRunningTime;//電車が進む速さ(vw/s)
        var speed_ms = speed_s * 1000;//電車が進む速さ(vw/ms)
        console.log("speed_ms");
        console.log(speed_ms);
        var time_per_once_s = trainRunningTime/10;//1回(電車が走る時間を10等分)にかかる時間(秒)
        var time_per_once_ms = time_per_once_s * 1000;
        console.log("time_per_once_ms");
        console.log(time_per_once_ms);

//線路の幅（width: 100vw）、電車の幅（width: 20vw）を調べる。電車の幅は20vw、高さは10vwにした。
//線路の幅(344px)から電車の幅(100px)を引いたのが電車が走る距離。（width: 80vw）
//speed_sのところを80でvwにすると動く時のスピードが速すぎる。
        var n = 0;
        var img = $('img').css({left:'0',position:'absolute'});
        var movemove = function(){
          $('img').stop().animate({left:'+=' + 8 + 'vw'},speed_ms);//speed_msの速さ(前なら1000px/s)で8vw進む。
          n = n + 1;
          console.log(n);
          if ( n >= 10 ) {//電車が走る時間を10等分。time_per_onceで10等分しているので。
            stopTrain();
            console.log("到着");
          }else{
            console.log("まだ");
          };
        }
        var trainMove;
        trainMove = setInterval(movemove,time_per_once_ms);//1回にかかる時間(前なら3000ミリ秒=3秒だった)ごとに。

        function stopTrain(){
          clearInterval(trainMove);
        }
      });
    </script>

  <div class="contents row">
    <%= form_tag("/records/#{@record.id}", method: :patch) do %>
      <div class="container">
        <h2>RUN NOW!</h2>
        <h2><%= current_user.name %> VS 山手線</h2>
        <div class="flex">
          <div class="start"> START
            <%= Station.find(@record.start_station_id).name_ja %> 駅 </div>
          <div class="goal"> GOAL
          <%= Station.find(@record.goal_station_id).name_ja %> 駅 </div>
          <div class="train">

            <%= image_tag '9407.png', :size =>'100x50', class: "vibration" %>
          </div>
        </div>
        <div>
          <h4>ゴール時刻
            <% arrivalTime = Record.get_arrivalTime(@record.opponent,@record.goal_station_id) %>
            <%= arrivalTime %>
            <div style="display: hidden" id="arrivalTime" data-arrivalTime=<%= arrivalTime %>></div>
          スタート時刻
            <% nowtime = Record.get_now_time %>
            <%= nowtime %>
            <div style="display: hidden" id="nowtime" data-nowtime=<%= nowtime %>></div></h4>
        </div>
        <input id = "input_running_time" type="hidden" name="running_time">
        <input id = "input_calory" type="hidden" name="consumed_calory">
        <input id = "result" name="result" type="hidden">
        <div class="wrap1">
          <button class="GOAL" type="submit">GOAL</button>
        </div>
      <% end %>
      </div>
  </div>
